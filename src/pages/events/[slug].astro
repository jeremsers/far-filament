---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/baselayout/MainLayout.astro";
import { Image } from "astro:assets";
import Picture from "astro/components/Picture.astro";

// G√©n√®re les routes statiques pour tous les √©v√©nements
export async function getStaticPaths() {
	const eventsEntries = await getCollection("events");
	return eventsEntries.map((entry) => ({
		params: { slug: entry.slug },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Formatage de la date
const formattedDate = new Date(entry.data.date).toLocaleDateString("fr-FR", {
	year: "numeric",
	month: "long",
	day: "numeric",
	hour: "2-digit",
	minute: "2-digit",
});
---

<BaseLayout
	title={`${entry.data.title} | √âv√©nement PNL`}
	description={entry.data.title}
>
	<div class="event-detail-container">
		<div class="event-header">
			<h1>{entry.data.title}</h1>
			{
				entry.data.image && (
					<div class="event-hero-image">
						<Picture
							src={entry.data.image}
							alt={entry.data.title}
							width={1000}
							height={500}
							class="hero-img"
						/>
					</div>
				)
			}
			<div class="event-meta">
				<div class="event-date">
					<span class="icon">üìÖ</span>
					<time datetime={entry.data.date.toISOString()}>{formattedDate}</time>
				</div>
				<div class="event-location">
					<span class="icon">üìç</span>
					<span>{entry.data.lieu}</span>
				</div>
				<div class="event-price">
					<span class="icon">üí∞</span>
					<span>{entry.data.prix}</span>
				</div>
				<div class="event-group-size">
					<span class="icon">üë•</span>
					<span>{entry.data.tailleGroupe} participants maximum</span>
				</div>
			</div>
		</div>

		<div class="event-content">
			<div class="event-description">
				<h2>√Ä propos de cet √©v√©nement</h2>
				<div class="markdown-content">
					<Content />
				</div>
			</div>

			<div class="event-additional-info">
				<h2>Informations pratiques</h2>
				<div class="info-card">
					<h3>Ce qui est inclus</h3>
					<ul>
						<li>Formation compl√®te en PNL</li>
						<li>Mat√©riel p√©dagogique</li>
						<li>Certificat de participation</li>
						<li>Pauses caf√© et rafra√Æchissements</li>
					</ul>
				</div>

				<div class="info-card">
					<h3>Pr√©requis</h3>
					<p>
						Aucune connaissance pr√©alable en PNL n'est requise pour cet √©v√©nement.
						Tous les niveaux sont bienvenus.
					</p>
				</div>
			</div>
		</div>

		<div class="event-registration">
			<div class="registration-card">
				<h2>R√©servez votre place</h2>
				<p class="price-highlight">{entry.data.prix}</p>
				<p class="spots-left">Il reste <strong>8 places</strong> disponibles</p>
				<button class="btn-register">S'inscrire maintenant</button>
				<p class="registration-note">
					L'inscription est confirm√©e apr√®s paiement. Annulation possible jusqu'√† 7
					jours avant l'√©v√©nement.
				</p>
			</div>
		</div>

		<div class="back-link">
			<a href="/events">‚Üê Retour √† tous les √©v√©nements</a>
		</div>
