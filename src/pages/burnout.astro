				color: $text-grey;
				margin-bottom: 0.5rem;
				text-align: center;
			}

			.price-container {
				margin-bottom: 0;
				background: white;
				display: inline-block;
				padding: clamp(1rem, 5vw, 1.5rem) clamp(1rem, 5vw, 3rem);
				border-radius: $border-radius-lg;
				box-shadow: $box-shadow-card;
				border: 1px solid rgba($primary-color, 0.1);
				max-width: 100%;
				box-sizing: border-box;

				.price-strike {
					display: block;
					text-decoration: line-through;
					color: $text-grey;
					font-size: clamp(0.9rem, 2vw, 1rem);
					margin-bottom: 0.5rem;
				}

				.price-real {
					display: block;
					font-size: clamp(1.3rem, 5vw, 2rem);
					font-weight: 700;
					color: $primary-color;
					letter-spacing: -0.5px;
				}
			}
		}
		/* Process Section */
		.process-section {
			padding: 5rem 1rem;
			background-color: $bg-color;

			h2 {
				margin-bottom: 1rem;
				color: $text-color;
			}
			.section-intro {
				text-align: center;
				margin-bottom: 3rem;
				color: $text-light;
			}

			.steps-grid {
				display: grid;
				grid-template-columns: 1fr;
				gap: 2rem;

				@media (min-width: 768px) {
					grid-template-columns: repeat(3, 1fr);
				}
			}

			.step-card {
				text-align: center;
				padding: 2rem;
				border: 1px solid $border-color;
				border-radius: 8px;
				background: $bg-light;
				position: relative;
				display: flex;
				flex-direction: column;
				justify-content: flex-start;
				height: 100%;

				.step-number {
					background-color: $secondary-color;
					color: #fff;
					width: 40px;
					height: 40px;
					border-radius: 50%;
					display: flex;
					align-items: center;
					justify-content: center;
					font-weight: bold;
					font-size: clamp(1rem, 3vw, 1.2rem);
					margin: 0 auto 1.5rem;
				}
				.step-duration {
					font-size: 0.95rem;
					margin-bottom: 1rem;
				}
				h3 {
					font-size: clamp(1rem, 3vw, 1.2rem);
					margin-bottom: 1rem;
				}
				p {
					font-size: 0.95rem;
					line-height: 1.6;
				}
			}
		}

		/* Qualification Section */
		.qualification-section {
			padding: 5rem 1rem;
			background: linear-gradient(to bottom, $bg-color, $bg-light);
			.qualif-grid {
				display: grid;
				grid-template-columns: 1fr;
				gap: 2rem;

				@media (min-width: 768px) {
					grid-template-columns: 1fr 1fr;
				}
			}

			.qualif-box {
				padding: clamp(2rem, 5vw, 3rem) clamp(1rem, 5vw, 2.5rem);
				box-sizing: border-box;
				width: 100%;
				max-width: 100%;
				min-width: 0; /* Prevents grid blowout */
				border-radius: 20px;
				position: relative;
				text-align: left;
				transition: all 0.3s ease;

				h3 {
					margin-bottom: 2rem;
					font-size: clamp(1rem, 4vw, 1.4rem);
					font-weight: 700;
					display: flex;
					align-items: center;
					gap: 10px;
					min-height: 3.5rem; /* Ensure lists start at same level */
				}

				ul {
					list-style: none;
					padding: 0;
					li {
						margin-bottom: 1.2rem;
						position: relative;
						padding-left: 2rem;
						font-size: clamp(0.95rem, 3vw, 1.05rem);
					}
				}

				/* Yes Box Design */
				&.yes {
					background: rgba($primary-color, 0.1);
					border: 1px solid rgba($primary-color, 0.3);
					color: $primary-color;

					h3 {
						color: $primary-color;
						&::before {
							content: "\f00c"; /* Check Icon */
							font-family: "Font Awesome 6 Free";
							font-weight: 900;
							background: $bg-light;
							color: $primary-color;
							width: 40px;
							height: 40px;
							min-width: 40px; /* Prevent shrinking */
							min-height: 40px; /* Prevent shrinking */
							flex-shrink: 0; /* Prevent shrinking */
							display: flex;
							align-items: center;
							justify-content: center;
							border-radius: 50%;
							font-size: clamp(1rem, 3vw, 1.2rem);
							box-shadow: 0 4px 10px rgba($primary-color, 0.1);
							border: 2px solid $primary-color;
						}
					}

					li::before {
						content: "‚úì";
						color: $primary-color;
						position: absolute;
						left: 0;
						font-weight: 900;
					}
				}

				/* No Box Design */
				&.no {
					background: rgba($secondary-color, 0.1);
					color: $secondary-color-alt;
					border: 1px solid rgba($secondary-color, 0.3);

					h3 {
						color: $secondary-color;
						&::before {
							content: "\f00d"; /* Cross Icon */
							font-family: "Font Awesome 6 Free";
							font-weight: 900;
							background: $bg-light;
							color: $secondary-color;
							width: 40px;
							height: 40px;
							min-width: 40px; /* Prevent shrinking */
							min-height: 40px; /* Prevent shrinking */
							flex-shrink: 0; /* Prevent shrinking */
							display: flex;
							align-items: center;
							justify-content: center;
							border-radius: 50%;
							font-size: clamp(1rem, 3vw, 1.2rem);
							box-shadow: 0 4px 10px rgba($secondary-color, 0.1);
							border: 2px solid $secondary-color;
						}
					}

					li {
						opacity: 0.9;
					}

					li::before {
						content: "‚úï";
						color: $secondary-color;
						position: absolute;
						left: 0;
						font-weight: 900;
					}
				}
			}
		}
		/* Pivot Section */
		.pivot-separator {
			padding: 4rem 1rem;
			text-align: center;
			background-color: $bg-light;

			.divider {
				height: 3px;
				width: 80px;
				background: linear-gradient(to right, transparent, $text-grey, transparent);
				margin: 0 auto 3rem;
			}

			h3 {
				font-size: clamp(1.2rem, 4vw, 1.5rem);
				margin-bottom: 0.8rem;
			}
		}

		/* Tripwire Section */
		.offer-tripwire {
			padding: 5rem 1rem;
			background-color: $bg-light;
			display: flex;
			justify-content: center;

			.tripwire-card {
				background: white;
				border: 1px solid rgba(0, 0, 0, 0.05);
				padding: clamp(1.5rem, 5vw, 3rem);
				border-radius: $border-radius-lg;
				box-shadow: $box-shadow-card;
				max-width: 900px;
				width: 100%;
				display: flex;
				flex-direction: column;
				gap: 3rem;
				align-items: center;
				position: relative;
				overflow: hidden;

				&::before {
					content: "";
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					height: 6px;
					background: repeating-linear-gradient(
						45deg,
						$secondary-color,
						$secondary-color 10px,
						white 10px,
						white 20px
					);
				}

				@media (min-width: $mobile) {
					flex-direction: row;
					text-align: left;
				}
			}

			.tripwire-image {
				flex: 0 0 250px;

				.img-placeholder {
					width: 100%;
					height: 250px;
					background-color: $bg-color;
					display: flex;
					align-items: center;
					justify-content: center;
					border-radius: $border-radius-md;
					font-size: clamp(3rem, 10vw, 4rem);
				}
			}

			.tripwire-content {
				flex: 1;
				display: flex;
				flex-direction: column;
				gap: 1.2rem;

				h3 {
					font-size: clamp(1.2rem, 4vw, 1.8rem);
					color: $primary-color;
					margin: 0;
				}

				p {
					margin: 0;
				}

				.tripwire-price {
					font-size: clamp(1.4rem, 5vw, 2rem);
					font-weight: bold;
					color: $secondary-color;
				}
			}
		}

		/* Trust Section */
		.trust-section {
			padding: 5rem 1rem;
			background: linear-gradient(to bottom, $bg-light, $bg-color);

			.bio {
				margin-bottom: 4rem;
				max-width: 600px;
				margin-left: auto;
				margin-right: auto;

				h3 {
					margin-bottom: 1rem;
				}
				p {
					font-size: clamp(1rem, 3vw, 1.1rem);
				}
			}

			.faq {
				max-width: 800px;
				margin: 0 auto;

				h3 {
					margin-bottom: 2rem;
					text-align: center;
				}

				details {
					background-color: #fff;
					padding: 1.5rem;
					border: 1px solid $border-color;
					border-radius: $border-radius-md;
					margin-bottom: 1rem;
					text-align: left;
					cursor: pointer;
					transition: all 0.2s ease;

					&:hover {
						border-color: $primary-color;
					}

					summary {
						font-weight: 600;
						font-family: "Poppins", sans-serif;
						list-style: none; /* Hide default arrow */
						position: relative;
						padding-right: 30px;
						color: $text-color;

						&::-webkit-details-marker {
							display: none;
						}

						&::after {
							content: "+";
							position: absolute;
							right: 0;
							font-weight: bold;
							color: $primary-color;
							font-size: clamp(1.2rem, 5vw, 1.5rem);
							line-height: 1;
							top: -4px;
						}
					}

					&[open] summary::after {
						content: "-";
					}

					p {
						margin-top: 1rem;
						color: $text-light;
						padding-top: 1rem;
						border-top: 1px dashed $border-color;
					}
				}
			}
		}
	</style>
</LandingLayout>
