---
import { getCollection } from "astro:content";
import Layoutalt from "../../../layouts/baselayout/Layoutalt.astro";
import { Image } from "astro:assets";

interface Post {
	slug: string;
	data: {
		title: string;
		pubDate: Date;
		description: string;
		author: string;
		image?: any;
		category: string;
		tags: string[];
	};
}

export async function getStaticPaths({ paginate }: { paginate: Function }) {
	const allPosts = await getCollection("blog");
	const sortedPosts = allPosts.sort(
		(a: Post, b: Post) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
	);

	// Get all unique categories
	const allCategories = [
		...new Set(sortedPosts.map((post: Post) => post.data.category)),
	] as string[];

	// Create paths for "all" posts
	const allPostsPaths = paginate(sortedPosts, {
		params: { tag: "all" },
		pageSize: 9,
		props: { category: "all", allCategories },
	});

	// For every category, create paginated paths
	const categoryPaths = allCategories.flatMap((category) => {
		const filteredPosts = sortedPosts.filter(
			(post: Post) => post.data.category === category
		);

		return paginate(filteredPosts, {
			params: { tag: category.toLowerCase() },
			pageSize: 9,
			props: { category, allCategories },
		});
	});

	return [...allPostsPaths, ...categoryPaths];
}

// Get pagination data and props
const { page, category, allCategories } = Astro.props;

// Date formatting
const formatDate = (date: Date) => {
	return new Date(date).toLocaleDateString("fr-FR", {
		year: "numeric",
		month: "long",
		day: "numeric",
	});
};
---

<Layoutalt
	title={`Blog PNL - ${category !== "all" ? category + " - " : ""}Articles et Ressources`}
>
	<section class="blog-section">
		<div class="section-header">
			<h1>Blog PNL {category !== "all" && `- ${category}`}</h1>
			<p class="section-subtitle">
				{
					category === "all"
						? "D√©couvrez nos articles sur la PNL et le d√©veloppement personnel"
						: `Explorez nos articles dans la cat√©gorie ${category}`
				}
			</p>
		</div>

		<nav class="categories-filter" aria-label="Cat√©gories d'articles">
			<a
				href="/blog/all/1"
				class:list={["filter-btn", { active: category === "all" }]}
				aria-current={category === "all" ? "page" : undefined}
			>
				Tous les articles
			</a>
			{
				allCategories.map((cat: string) => (
					<a
						href={`/blog/${cat.toLowerCase()}/1`}
						class:list={["filter-btn", { active: category === cat }]}
						aria-current={category === cat ? "page" : undefined}
					>
						{cat}
					</a>
				))
			}
		</nav>

		<div class="blog-grid">
			{
				page.data.map((post: Post) => (
					<article class="blog-card">
						<a href={`/blog/${post.slug}`} class="card-link">
							{post.data.image && (
								<div class="card-image">
									<Image src={post.data.image} alt={post.data.title} />
								</div>
							)}
							<div class="card-content">
								<div class="card-category">{post.data.category}</div>
								<h2>{post.data.title}</h2>
								<p class="card-description">{post.data.description}</p>
								<div class="card-meta">
									<span class="date">
										<span class="icon">üìÖ</span>
										{formatDate(post.data.pubDate)}
									</span>
									<span class="author">
										<span class="icon">‚úçÔ∏è</span>
										{post.data.author}
									</span>
								</div>
								<div class="card-tags">
									{post.data.tags.map((tag: string) => (
										<span class="tag">#{tag}</span>
									))}
								</div>
							</div>
						</a>
					</article>
				))
			}
		</div>

		<nav class="pagination" aria-label="Pagination des articles">
			<div class="pagination-links">
				{
					page.url.prev && (
						<a href={page.url.prev} class="pagination-btn prev" rel="prev">
							<span class="icon">‚Üê</span> Articles pr√©c√©dents
						</a>
					)
				}

				<div class="pagination-numbers">
					{
						Array.from({ length: page.lastPage }, (_, i) => i + 1).map((num) => (
							<a
								href={`/blog/${category.toLowerCase()}/${num}`}
								class:list={["pagination-number", { active: num === page.currentPage }]}
								aria-current={num === page.currentPage ? "page" : undefined}
							>
								{num}
							</a>
						))
					}
				</div>

				{
					page.url.next && (
						<a href={page.url.next} class="pagination-btn next" rel="next">
							Articles suivants <span class="icon">‚Üí</span>
						</a>
					)
				}
			</div>
		</nav>
	</section>
</Layoutalt>

<style lang="scss">
	.blog-section {
		padding: 60px 20px;
		max-width: 1200px;
		margin: 0 auto;

		.section-header {
			text-align: center;
			margin-bottom: 50px;

			h1 {
				color: $text-color;
				font-size: 3em;
				margin-bottom: 15px;
				position: relative;
				display: inline-block;

				&:after {
					content: "";
					position: absolute;
					bottom: -10px;
					left: 50%;
					transform: translateX(-50%);
					width: 80px;
					height: 4px;
					background-color: $primary-color;
					border-radius: 2px;
				}
			}

			.section-subtitle {
				color: $text-light;
				font-size: 1.2em;
				max-width: 600px;
				margin: 0 auto;
			}
		}

		.blog-grid {
			display: grid;
			grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
			gap: 30px;
			padding: 20px 0;
		}

		.blog-card {
			background: $bg-light;
			border-radius: $border-radius-lg;
			overflow: hidden;
			box-shadow: $shadow-md;
			transition:
				transform 0.3s ease,
				box-shadow 0.3s ease;

			&:hover {
				transform: translateY(-10px);
				box-shadow: $shadow-xl;
			}

			.card-link {
				text-decoration: none;
				color: inherit;
			}

			.card-image {
				width: 100%;
				height: 200px;
				overflow: hidden;

				img {
					width: 100%;
					height: 100%;
					object-fit: cover;
					transition: transform 0.3s ease;

					&:hover {
						transform: scale(1.05);
					}
				}
			}

			.card-content {
				padding: 20px;

				.card-category {
					display: inline-block;
					background-color: $primary-color;
					color: $text-white;
					padding: 5px 10px;
					border-radius: 5px;
					font-size: 0.9em;
					margin-bottom: 15px;
				}

				h2 {
					font-size: 1.5em;
					margin-bottom: 10px;
					color: $text-color;
					line-height: 1.3;
				}

				.card-description {
					color: $text-light;
					font-size: 1em;
					margin-bottom: 20px;
					line-height: 1.5;
				}

				.card-meta {
					display: flex;
					justify-content: space-between;
					color: $text-light;
					font-size: 0.9em;
					margin-bottom: 15px;

					span {
						display: flex;
						align-items: center;
						gap: 5px;

						.icon {
							font-size: 1.2em;
						}
					}
				}

				.card-tags {
					display: flex;
					flex-wrap: wrap;
					gap: 8px;

					.tag {
						background-color: $bg-color;
						color: $primary-color;
						padding: 4px 8px;
						border-radius: 4px;
						font-size: 0.85em;
						transition: transform 0.2s ease;

						&:hover {
							transform: translateY(-2px);
						}
					}
				}
			}
		}
	}

	.categories-filter {
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		gap: 15px;
		margin: 30px 0;
		padding: 0 20px;

		.filter-btn {
			padding: 8px 16px;
			border: 2px solid $primary-color;
			border-radius: 25px;
			background: transparent;
			color: $primary-color;
			font-size: 1em;
			cursor: pointer;
			transition: all 0.3s ease;

			&:hover {
				background-color: $primary-color;
				color: $text-white;
			}

			&.active {
				background-color: $primary-color;
				color: $text-white;
			}
		}
	}

	.blog-card {
		transition: opacity 0.3s ease;
	}

	@media (max-width: $mobile) {
		.blog-section {
			padding: 40px 15px;

			.section-header {
				h1 {
					font-size: 2.5em;
				}
			}

			.blog-grid {
				grid-template-columns: 1fr;
				gap: 20px;
			}

			.blog-card {
				.card-content {
					h2 {
						font-size: 1.3em;
					}

					.card-meta {
						flex-direction: column;
						gap: 8px;
					}
				}
			}
		}

		.categories-filter {
			gap: 10px;

			.filter-btn {
				padding: 6px 12px;
				font-size: 0.9em;
			}
		}
	}
	.pagination {
		display: flex;
		justify-content: center;
		margin-top: $spacing-xl;
		padding: $spacing-md 0;

		.pagination-links {
			display: flex;
			align-items: center;
			gap: $spacing-md;
		}

		.pagination-numbers {
			display: flex;
			gap: $spacing-sm;
		}

		.pagination-number {
			display: flex;
			align-items: center;
			justify-content: center;
			width: 40px;
			height: 40px;
			border-radius: $border-radius-full;
			background-color: $bg-light;
			color: $text-color;
			text-decoration: none;
			transition: all $transition-speed $transition-timing;

			&:hover {
				background-color: $primary-color;
				color: $text-white;
			}

			&.active {
				background-color: $primary-color;
				color: $text-white;
				font-weight: bold;
			}
		}

		.pagination-btn {
			display: flex;
			align-items: center;
			gap: $spacing-sm;
			padding: $spacing-sm $spacing-md;
			border-radius: $border-radius-md;
			background-color: $bg-light;
			color: $text-color;
			text-decoration: none;
			transition: all $transition-speed $transition-timing;

			&:hover {
				background-color: $primary-color;
				color: $text-white;
			}

			.icon {
				font-size: 1.2em;
			}
		}
	}

	@media (max-width: $mobile) {
		// ... Styles mobile existants ...

		.pagination {
			.pagination-links {
				flex-direction: column;
				gap: $spacing-sm;
			}

			.pagination-numbers {
				order: -1;
				flex-wrap: wrap;
				justify-content: center;
			}
		}
	}
</style>
