---
import { getCollection } from "astro:content";
import BlogLayout from "../../layouts/baselayout/BlogLayout.astro";
import { Image } from "astro:assets";
import PreviewArticle from "../../components/PreviewArticle.astro";

// G√©n√®re les routes statiques pour tous les articles
export async function getStaticPaths() {
	const blogEntries = await getCollection("blog");
	return blogEntries.map((entry) => ({
		params: { slug: entry.slug },
		props: { entry, allPosts: blogEntries },
	}));
}

const { entry, allPosts } = Astro.props;
const { Content } = await entry.render();

// Formatage de la date
const formattedDate = new Date(entry.data.pubDate).toLocaleDateString("fr-FR", {
	year: "numeric",
	month: "long",
	day: "numeric",
});

// R√©cup√©rer les articles similaires (m√™me cat√©gorie, exclure l'article actuel)
const similarPosts = allPosts
	.filter(
		(post) =>
			post.slug !== entry.slug && post.data.category === entry.data.category
	)
	.slice(0, 2);
---

<BlogLayout
	title={entry.data.title}
	description={entry.data.description}
	image={entry.data.image}
	pubDate={entry.data.pubDate}
	author={entry.data.author}
>
	<div class="article-layout">
		<article class="blog-post">
			<div class="post-header">
				{
					entry.data.image && (
						<div class="post-image">
							<Image
								src={entry.data.image}
								alt={entry.data.title}
								width={900}
								height={1000}
							/>
						</div>
					)
				}
				<div class="post-meta">
					<h1>{entry.data.title}</h1>
					<div class="post-info">
						<span class="date">
							<span class="icon">üìÖ</span>
							{formattedDate}
						</span>
						<span class="author">
							<span class="icon">‚úçÔ∏è</span>
							{entry.data.author}
						</span>
						<span class="category">
							<span class="icon">üìÇ</span>
							{entry.data.category}
						</span>
					</div>
					<div class="tags">
						{entry.data.tags.map((tag: string) => <span class="tag">#{tag}</span>)}
					</div>
				</div>
			</div>

			<div class="post-content">
				<Content />
			</div>

			<div class="post-footer">
				<div class="share-buttons">
					<h3>Partager cet article</h3>
					<div class="social-share">
						<a
							href={`https://twitter.com/intent/tweet?text=${entry.data.title}&url=${Astro.url}`}
							target="_blank"
							rel="noopener noreferrer"
							class="share-button twitter"
						>
							Twitter
						</a>
						<a
							href={`https://www.linkedin.com/shareArticle?mini=true&url=${Astro.url}&title=${entry.data.title}`}
							target="_blank"
							rel="noopener noreferrer"
							class="share-button linkedin"
						>
							LinkedIn
						</a>
						<a
							href={`https://www.facebook.com/sharer/sharer.php?u=${Astro.url}`}
							target="_blank"
							rel="noopener noreferrer"
							class="share-button facebook"
						>
							Facebook
						</a>
					</div>
				</div>
			</div>
		</article>
		<aside class="article-sidebar">
			<div class="similar-articles">
				<h3>Articles similaires</h3>
				<div class="similar-articles-container">
					{
						similarPosts.map((post) => (
							<PreviewArticle
								title={post.data.title}
								image={post.data.image}
								url={`/blog/${post.slug}`}
								date={post.data.pubDate}
								category={post.data.category}
							/>
						))
					}
				</div>
			</div>
		</aside>
	</div>
</BlogLayout>

<style lang="scss">
	.article-layout {
		display: flex;
		gap: $spacing-xl;
		max-width: 1440px;
		margin: 0 auto;
		padding: $spacing-xl $spacing-md;
	}

	.article-sidebar {
		display: flex;
		gap: $spacing-xl;
		.similar-articles {
			flex-direction: column;
			position: sticky;
			top: $spacing-xl;
			width: 300px;

			h3 {
				color: $text-color;
				font-size: 1.3em;
				margin-bottom: $spacing-lg;
				padding-bottom: $spacing-sm;
				border-bottom: 2px solid $primary-color;
			}
			.similar-articles-container {
				display: flex;
				flex-direction: column;
				gap: $spacing-md;
			}
		}
	}

	@media (max-width: $tablet) {
		.article-layout {
			flex-direction: column;
			padding: $spacing-lg $spacing-sm;
		}

		.article-sidebar {
			order: 2;
			margin-top: $spacing-xl;
			width: 100%;

			.similar-articles {
				position: relative;
				top: 0;
				width: 100%;

				.similar-articles-container {
					display: grid;
					grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
					gap: $spacing-md;
				}
			}
		}
	}

	@media (max-width: $mobile) {
		.article-layout {
			padding: $spacing-md $spacing-xs;
		}

		.article-sidebar {
			margin-top: $spacing-lg;

			.similar-articles {
				h3 {
					font-size: 1.2em;
					margin-bottom: $spacing-md;
				}

				.similar-articles-container {
					grid-template-columns: 1fr;
				}
			}
		}
	}

	.blog-post {
		max-width: 800px;
		margin: 0 auto;
		padding: 40px 20px;

		.post-header {
			margin-bottom: 40px;

			.post-image {
				margin-bottom: 30px;
				border-radius: $border-radius-lg;
				overflow: hidden;
				box-shadow: $shadow-md;

				img {
					width: 100%;
					height: auto;
					display: block;
				}
			}

			h1 {
				font-size: 2.5em;
				color: $text-color;
				margin-bottom: 20px;
			}

			.post-info {
				display: flex;
				flex-wrap: wrap;
				gap: 20px;
				margin-bottom: 15px;
				color: $text-light;
				font-size: 0.9em;

				span {
					display: flex;
					align-items: center;
					gap: 5px;

					.icon {
						font-size: 1.2em;
					}
				}
			}

			.tags {
				display: flex;
				flex-wrap: wrap;
				gap: 10px;
				margin-top: 15px;

				.tag {
					background-color: $bg-color;
					color: $primary-color;
					padding: 5px 10px;
					border-radius: 5px;
					font-size: 0.9em;
					transition: transform 0.3s ease;

					&:hover {
						transform: translateY(-2px);
					}
				}
			}
		}

		.post-content {
			line-height: 1.8;
			color: $text-color;

			:global(h2) {
				color: $text-color;
				font-size: 1.8em;
				margin: 40px 0 20px;
				position: relative;

				&:after {
					content: "";
					position: absolute;
					bottom: -10px;
					left: 0;
					width: 40px;
					height: 3px;
					background-color: $primary-color;
					border-radius: 2px;
				}
			}

			:global(p) {
				margin-bottom: 20px;
			}

			:global(ul) {
				margin-bottom: 20px;
				padding-left: 20px;

				li {
					margin-bottom: 10px;
				}
			}

			:global(strong) {
				color: $text-color;
			}
		}

		.post-footer {
			margin-top: 60px;
			padding-top: 30px;
			border-top: 1px solid $border-color;

			.share-buttons {
				text-align: center;

				h3 {
					color: $text-color;
					margin-bottom: 20px;
					font-size: 1.2em;
				}

				.social-share {
					display: flex;
					justify-content: center;
					gap: 15px;

					.share-button {
						padding: 10px 20px;
						border-radius: 5px;
						color: $text-white;
						text-decoration: none;
						transition: transform 0.3s ease;

						&:hover {
							transform: translateY(-2px);
						}

						&.twitter {
							background-color: $twitter-color;
						}

						&.linkedin {
							background-color: $linkedin-color;
						}

						&.facebook {
							background-color: $facebook-color;
						}
					}
				}
			}
		}
	}

	@media (max-width: $mobile) {
		.blog-post {
			padding: 20px;

			.post-header {
				h1 {
					font-size: 2em;
				}

				.post-info {
					flex-direction: column;
					gap: 10px;
				}
			}

			.post-footer {
				.social-share {
					flex-wrap: wrap;
				}
			}
		}
	}
</style>
