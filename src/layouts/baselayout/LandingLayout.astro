---
import { Image } from "astro:assets";
import logo from "../../images/logo5.avif";
import logomobile from "../../images/logo5.avif";

interface Props {
	title?: string;
	description?: string;
}

const { title = "Far Phillies", description = "Accompagnement Burnout" } =
	Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<script type="text/javascript">
			(function (c, l, a, r, i, t, y) {
				c[a] =
					c[a] ||
					function () {
						(c[a].q = c[a].q || []).push(arguments);
					};
				t = l.createElement(r);
				t.async = 1;
				t.src = "https://www.clarity.ms/tag/" + i;
				y = l.getElementsByTagName(r)[0];
				y.parentNode.insertBefore(t, y);
			})(window, document, "clarity", "script", "vbjfobsizl");
		</script>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-PT8V5KSVQX"
		></script>
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-PT8V5KSVQX");
		</script>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
			integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
	</head>
	<body>
		<header class="header-main">
			<div class="logo">
				<a href="/" class="logo-link">
					<Image src={logo} alt="logo" class="logo-img" />
					<Image src={logomobile} alt="logo" class="logo-img-mobile" />
				</a>
			</div>
			<!-- No Navigation for Landing Pages -->
		</header>

		<main class="lp-main">
			<slot />
		</main>

		<footer class="lp-footer">
			<div class="footer-content">
				<p>&copy; {new Date().getFullYear()} Far Phillies. Tous droits réservés.</p>
				<div class="legal-links">
					<a href="/mentions-legales">Mentions Légales</a>
				</div>
			</div>
		</footer>

		<style is:global lang="scss">
			@import "../../assets/style/variables.scss";

			@font-face {
				font-family: "Poppins";
				font-style: normal;
				font-weight: 400;
				font-display: swap;
				src: url("/fonts/poppins-regular.woff2") format("woff2");
			}

			@font-face {
				font-family: "Poppins";
				font-style: normal;
				font-weight: 600;
				font-display: swap;
				src: url("/fonts/poppins-semibold.woff2") format("woff2");
			}

			@font-face {
				font-family: "Montserrat";
				font-style: normal;
				font-weight: 700;
				font-display: swap;
				src: url("/fonts/montserrat-bold.woff2") format("woff2");
			}

			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
				scroll-behavior: smooth;
			}

			body {
				font-family: "Poppins", sans-serif;
				background-color: $bg-color;
				color: $text-color;
				line-height: 1.6;
			}

			h1,
			h2,
			h3,
			h4,
			h5,
			h6 {
				font-family: "Montserrat", sans-serif;
				color: $text-color;
			}
		</style>

		<style lang="scss">
			@import "../../assets/style/variables.scss";

			.header-main {
				display: flex;
				justify-content: center; /* Centered logo since no nav */
				align-items: center;
				padding: 0 clamp(15px, 3vw, 30px);
				background-color: $bg-color;
				height: clamp(60px, 10vh, 80px);
				position: relative;
				z-index: 1000;
				box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
			}

			.logo {
				height: 100%;
				/* Removed fixed width to allow auto-sizing based on image ratio */
				max-width: 200px;
				z-index: 1001;
				transition: all 0.3s ease;
				position: relative;
				display: flex;
				align-items: center;

				&-link {
					display: block;
					height: 100%;
					display: flex;
					align-items: center;
					justify-content: center;
				}

				&-img {
					object-fit: contain;
					height: 100%;
					width: auto;
					transition: transform 0.4s ease;
					display: block;

					@media (max-width: 768px) {
						display: none;
					}

					&:hover {
						transform: translateY(-2px);
					}
				}

				&-img-mobile {
					height: 100%;
					width: auto;
					object-fit: contain;
					display: none;

					@media (max-width: 768px) {
						display: block;
					}
				}
			}

			.lp-main {
				min-height: 80vh;
				display: flex;
				flex-direction: column;
			}

			.lp-footer {
				background-color: $bg-dark;
				padding: 2rem 1rem;
				text-align: center;
				font-size: 0.85rem;
				color: $text-white;

				.footer-content {
					display: flex;
					flex-direction: column;
					gap: 0.5rem;
					align-items: center;
				}

				.legal-links {
					a {
						color: $text-white;
						text-decoration: none;
						&:hover {
							text-decoration: underline;
						}
					}
				}
			}
		</style>
	</body>
</html>
