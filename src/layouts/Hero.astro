	<Image
		src={heroBanner}
		alt="Illustration Hero"
		class="hero-img"
		height={2280}
		width={1574}
		decoding="async"
		loading="lazy"
	/>

	<style lang="scss">
		.hero {
			position: relative;
			min-height: 90vh;
			display: flex;
			align-items: center;
			overflow: hidden;

			.hero-content {
				position: relative;
				z-index: 2;
				width: 100%;
				margin: 0 auto;
				padding: 40px;
				text-align: center;
				text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
				animation: fadeIn 1s ease-out;

				&::before {
					content: "";
					position: absolute;
					top: 50%;
					left: 50%;
					width: 200%;
					height: 200%;
					transform: translate(-50%, -50%);
					background: radial-gradient(
						circle,
						rgba(0, 0, 0, 0.6) 15%,
						rgba(0, 0, 0, 0) 70%
					);
					z-index: -1;
				}
			}

			.section-header {
				margin-bottom: 30px;
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: 1.5rem;

				.credentials {
					font-size: clamp(1rem, 1.5vw + 0.5rem, 1.2rem);
					text-transform: uppercase;
					letter-spacing: 2px;
					color: var(--secondary-color, #e0c9a6); // Fallback color
					margin: 0;
					font-weight: 600;
					text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
					animation: fadeIn 1s ease-out 0.2s both;
				}

				h1 {
					color: white;
					font-size: clamp(2rem, 3vw + 1rem, 3.5rem);
					margin: 0;
					font-weight: 800;
					line-height: 1.2;
					text-align: center;
					text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
					animation: slideDown 0.8s ease-out;
					max-width: 1100px;

					br {
						display: block;
						@media (max-width: 768px) {
							display: none; // Hide line break on mobile for better flow
						}
					}
				}

				.hero-description {
					font-size: clamp(1.1rem, 2vw + 0.5rem, 1.3rem);
					line-height: 1.6;
					margin: 0;
					color: rgba(255, 255, 255, 0.9);
					max-width: 1000px;
					text-align: center;
					text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
					animation: fadeIn 1s ease-out 0.5s both;
				}

				.values {
					display: flex;
					gap: 2rem;
					justify-content: center;
					align-items: center;
					margin: 1rem 0;
					flex-wrap: wrap;
					animation: fadeIn 1s ease-out 0.7s both;

					span {
						font-size: 1.1rem;
						color: var(--secondary-color, #e0c9a6);
						font-weight: 500;
						display: flex;
						align-items: center;
						gap: 0.5rem;
						white-space: nowrap;
					}
				}

				.cta-btn {
					display: inline-block;
					background-color: var(--secondary-color, #d4a373);
					color: white;
					text-decoration: none;
					padding: 1rem 2rem;
					border-radius: 50px;
					font-weight: 700;
					font-size: 1.1rem;
					transition: all 0.3s ease;
					box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
					animation: fadeIn 1s ease-out 0.9s both;
					margin-top: 1rem;

					&:hover {
						transform: translateY(-2px);
						box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
						background-color: var(--primary-color, #a98467);
					}
				}
			}

			.hero-img {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				object-fit: cover;
				z-index: 1;
				opacity: 0.7;
				animation: zoomIn 20s ease-out infinite alternate;
			}

			&::before {
				content: "";
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background: linear-gradient(
					180deg,
					rgba(0, 0, 0, 0.7) 0%,
					rgba(0, 0, 0, 0.4) 25%,
					rgba(0, 0, 0, 0.4) 75%,
					rgba(0, 0, 0, 0.7) 100%
				);
				z-index: 1;
			}

			// Add a top gradient for better text contrast at the top
			&::after {
				content: "";
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 30vh;
				background: linear-gradient(
					to bottom,
					rgba(0, 0, 0, 0.6) 0%,
					rgba(0, 0, 0, 0) 100%
				);
				z-index: 1;
			}
		}

		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(20px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@keyframes slideDown {
			from {
				opacity: 0;
				transform: translateY(-30px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		@keyframes expandWidth {
			from {
				width: 0;
			}
			to {
				width: 120px;
			}
		}

		@keyframes zoomIn {
			from {
				transform: scale(1);
			}
			to {
				transform: scale(1.1);
			}
		}

		@media (max-width: $mobile) {
			.hero {
				height: 100%;
				min-height: 100vh;

				.hero-content {
					padding: 25px;
					margin: 0 15px;
				}
			}
		}
	</style>
</section>
