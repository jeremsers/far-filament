---
import { Image } from "astro:assets";
import logo from "../images/logo5.avif";

interface Props {
	title: string;
	description?: string;
	noindex?: boolean;
}

const {
	title,
	description = "Espace Cocon - Essence et Conscience",
	noindex = false,
} = Astro.props;
---

<!doctype html>
<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<!-- Initial consent -->
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("consent", "default", {
				ad_storage: "denied",
				ad_user_data: "denied",
				ad_personalization: "denied",
				analytics_storage: "denied",
				wait_for_update: 500,
			});
		</script>
		<!-- End Initial consent -->
		<!-- Axeptio -->
		<script is:inline>
			window.axeptioSettings = {
				clientId: "699ef2ccbd813aff599ea925",
				cookiesVersion: "58ffbee9-c557-4e4a-a8e4-4b7406855661",
				googleConsentMode: {
					default: {
						analytics_storage: "denied",
						ad_storage: "denied",
						ad_user_data: "denied",
						ad_personalization: "denied",
						wait_for_update: 500,
					},
				},
			};
			(function (d, s) {
				var t = d.getElementsByTagName(s)[0],
					e = d.createElement(s);
				e.async = true;
				e.src = "//static.axept.io/sdk.js";
				t.parentNode.insertBefore(e, t);
			})(document, "script");
		</script>
		<!-- End Axeptio -->
		<!-- Google Tag Manager -->
		<script is:inline>
			(function (w, d, s, l, i) {
				w[l] = w[l] || [];
				w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
				var f = d.getElementsByTagName(s)[0],
					j = d.createElement(s),
					dl = l != "dataLayer" ? "&l=" + l : "";
				j.async = true;
				j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
				f.parentNode.insertBefore(j, f);
			})(window, document, "script", "dataLayer", "GTM-WMWP677Q");
		</script>
		<!-- End Google Tag Manager -->
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content={description} />
		{noindex && <meta name="robots" content="noindex" />}
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&display=swap"
			rel="stylesheet"
		/>
		<!-- Font Awesome for icons -->
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
			integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
			crossorigin="anonymous"
			referrerpolicy="no-referrer"
		/>
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript
			><iframe
				src="https://www.googletagmanager.com/ns.html?id=GTM-WMWP677Q"
				height="0"
				width="0"
				style="display:none;visibility:hidden"></iframe></noscript
		>
		<!-- End Google Tag Manager (noscript) -->
		<!-- HEADER BAR (matches LandingLayout) -->
		<header class="header-main">
			<div class="logo">
				<a href="/" class="logo-link">
					<Image src={logo} alt="Essence et Conscience" class="logo-img" />
				</a>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<!-- FOOTER (matches LandingLayout) -->
		<footer class="cocoon-footer">
			<slot name="footer-content" />
			<div class="footer-content">
				<p>
					&copy; {new Date().getFullYear()} Essence et conscience. Tous droits réservés.
				</p>
				<div class="legal-links">
					<a href="/mentions-legales">Mentions Légales</a>
					/
					<a href="/confidentialite">Politique de Confidentialité</a>
					/
					<a href="/cgv">Conditions Générales de Vente</a>
				</div>
				<div class="support-row">
					<a href="mailto:contact@essence-et-conscience.ch" class="support-link"
						>Un problème ? Contactez le support</a
					>
				</div>
			</div>
		</footer>
	</body>
</html>

<style is:global lang="scss">
	@import "../assets/style/variables.scss";

	@font-face {
		font-family: "Poppins";
		font-style: normal;
		font-weight: 400;
		font-display: swap;
		src: url("/fonts/poppins-regular.woff2") format("woff2");
	}

	@font-face {
		font-family: "Poppins";
		font-style: normal;
		font-weight: 600;
		font-display: swap;
		src: url("/fonts/poppins-semibold.woff2") format("woff2");
	}

	@font-face {
		font-family: "Montserrat";
		font-style: normal;
		font-weight: 700;
		font-display: swap;
		src: url("/fonts/montserrat-bold.woff2") format("woff2");
	}

	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
		scroll-behavior: smooth;
	}

	html,
	body {
		font-family: "Poppins", sans-serif;
		background: linear-gradient(to bottom, $bg-light, $bg-color);
		color: $text-color;
		line-height: 1.6;
		overflow-x: hidden;
		width: 100%;
		max-width: 100%;
	}

	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	h1,
	h2,
	h3,
	h4,
	h5,
	h6 {
		font-family: "Montserrat", sans-serif;
		color: $text-color;
	}
</style>

<style lang="scss">
	@import "../assets/style/variables.scss";

	$font-script: "Caveat", cursive;

	main {
		flex: 1;
		background-color: $bg-color;
	}

	// ── Header Bar (same style as LandingLayout) ──
	.header-main {
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 0 clamp(15px, 3vw, 30px);
		background-color: $bg-color;
		height: clamp(60px, 10vh, 80px);
		position: relative;
		z-index: 1000;
		box-shadow: $shadow-md;
	}

	.logo {
		height: 100%;
		max-width: 200px;
		z-index: 1001;
		transition: all $transition-speed $transition-timing;
		position: relative;
		display: flex;
		align-items: center;

		&-link {
			display: flex;
			height: 100%;
			align-items: center;
			justify-content: center;
		}

		&-img {
			object-fit: contain;
			height: 100%;
			width: auto;
			transition: transform 0.4s ease;
			display: block;

			&:hover {
				transform: translateY(-2px);
			}
		}
	}

	// ── Footer (matches LandingLayout dark style) ──
	.cocoon-footer {
		background-color: $bg-dark;
		padding: 2rem 1rem;
		text-align: center;
		font-size: 0.85rem;
		color: $text-white;
		margin-top: auto;

		.footer-content {
			display: flex;
			flex-direction: column;
			gap: 0.5rem;
			align-items: center;
		}

		.legal-links {
			a {
				color: $text-white;
				text-decoration: none;
				&:hover {
					text-decoration: underline;
				}
			}
		}

		.support-row {
			margin-top: 0.5rem;
		}

		.support-link {
			color: rgba($text-white, 0.7);
			font-size: 0.8rem;
			text-decoration: underline;
			transition: color $transition-speed;

			&:hover {
				color: $text-white;
			}
		}
	}

	// Utility Classes (shared by pages using this layout)
	.cta-pill {
		background-color: $secondary-color;
		color: $text-white;
		text-decoration: none;
		padding: 12px 24px;
		border-radius: $border-radius-full;
		font-weight: 700;
		font-size: 1rem;
		transition:
			transform $transition-speed,
			box-shadow $transition-speed,
			background-color $transition-speed;
		white-space: nowrap;
		display: inline-flex;
		align-items: center;
		gap: 8px;
		border: none;
		cursor: pointer;

		&:hover {
			transform: translateY(-2px);
			box-shadow: 0 4px 12px rgba($secondary-color, 0.3);
			background-color: $hover-color-alt;
		}
	}
</style>
