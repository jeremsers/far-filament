<style lang="scss">
	.footer {
		background-color: $bg-dark;
		color: $text-white;
		padding: 60px 0 20px;

		&-container {
			max-width: 1200px;
			margin: 0 auto;
			padding: 0 20px;
		}

		&-content {
			display: grid;
			grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
			gap: 40px;
			margin-bottom: 40px;
		}

		&-section {
			h4 {
				color: $secondary-color;
				font-size: 1.2em;
				margin-bottom: 20px;
				position: relative;

				&:after {
					content: "";
					position: absolute;
					bottom: -8px;
					left: 0;
					width: 40px;
					height: 2px;
					background-color: $primary-color;
					border-radius: 2px;
				}
			}

			ul {
				list-style: none;
				padding: 0;
				margin: 0;

				li {
					margin-bottom: 12px;

					a {
						color: $text-white;
						text-decoration: none;
						display: flex;
						align-items: center;
						transition: color 0.3s ease;

						&:hover {
							color: $secondary-color;
						}
					}

					.icon {
						margin-right: 10px;
						font-size: 1.2em;
					}
				}
			}
		}

		.social-links {
			display: flex;
			flex-direction: column;
			gap: 12px;

			a {
				color: $text-white;
				text-decoration: none;
				display: flex;
				align-items: center;
				transition: color 0.3s ease;

				&:hover {
					color: $secondary-color;
				}

				.icon {
					margin-right: 10px;
					font-size: 1.2em;
				}
			}
		}

		&-bottom {
			padding-top: 20px;
			border-top: 1px solid $border-color-dark;
			display: flex;
			justify-content: space-between;
			align-items: center;
			flex-wrap: wrap;
			gap: 20px;

			.copyright {
				color: $text-grey;
				font-size: 0.9em;
				margin: 0;
			}

			.legal-links {
				display: flex;
				gap: 20px;

				a {
					color: $text-grey;
					text-decoration: none;
					font-size: 0.9em;
					transition: color 0.3s ease;

					&:hover {
						color: $secondary-color;
					}
				}
			}
		}
	}

	@media (max-width: 768px) {
		.footer {
			padding: 40px 0 20px;

			&-content {
				grid-template-columns: 1fr;
				gap: 30px;
			}

			&-bottom {
				flex-direction: column;
				text-align: center;

				.legal-links {
					justify-content: center;
				}
			}
		}
	}
