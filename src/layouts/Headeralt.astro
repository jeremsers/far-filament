---
import { Image } from "astro:assets";
import logo from "../images/logo.png";

---


<header>
    <div class="logo">
      <a href="/">
        <Image src={logo} alt="logo" class='logo-img' />
        </a>
      </div>
    <nav>
        <a href="#about">À propos</a>
        <a href="#services">Services</a>
        <a href="/alt">PNL</a>
        <a href="/blog/all/1">Blog</a>
        <a
          href="https://calendly.com/votre-lien"
          target="_blank"
          class="btn cta-btn">Réserver un rendez-vous gratuit</a
        >
      </nav>
</header>


<style lang="scss">
    header {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        padding: 15px 30px;
        background-color: $primary-color-alt;
        height: 10vh;
      }
      .logo {
        height: 100%;
        &-img {
      
        height: 100%;
        object-fit: contain;
      }
    }
nav {
        padding: 15px;
        display: flex;
        justify-content: flex-end;
        flex-direction: row;
        align-items: center;
      }
      nav a {
        color: white;
        text-decoration: none;
        margin: 0 15px;
        font-size: 16px;
      }
      .cta-btn {
				display: inline-block;
				background-color: $secondary-color-alt;
				color: $text-white;
				padding: 12px 25px;
				border-radius: 8px;
				font-weight: 600;
				transition: all 0.3s ease;

				&:hover {
					transform: translateY(-2px);
					box-shadow: $shadow-md;
				}
			}
</style>