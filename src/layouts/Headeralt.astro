---
import { Image } from "astro:assets";
import logo from "../images/logo5.png";
import logomobile from "../images/logo5.png";
---

<header class="header-alt">
	<div class="left-group">
		<button
			class="back-button"
			aria-label="Accueil"
			onclick="window.location.href='/'"
		>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				width="24"
				height="24"
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="2"
				stroke-linecap="round"
				stroke-linejoin="round"
			>
				<path d="M19 12H5M12 19l-7-7 7-7"></path>
			</svg>
			<span>Accueil</span>
		</button>
		<div class="logo">
			<a href="/" class="logo-link">
				<Image src={logo} alt="logo" class="logo-img" />
				<Image src={logomobile} alt="logo" class="logo-img-mobile" />
			</a>
		</div>
	</div>
	<button
		class="mobile-menu-toggle"
		aria-label="Menu"
		aria-expanded="false"
		aria-controls="main-nav"
	>
		<span class="hamburger"></span>
	</button>
	<nav id="main-nav">
		<a href="/qui" class="nav-link"><span>À propos</span></a>
		<a href="/#services" class="nav-link"><span>Accompagnements</span></a>
		<a href="/events/all/1" class="nav-link"><span>Événements</span></a>
		<a href="/blog/all/1" class="nav-link"><span>Blog</span></a>
		<a href="https://calendly.com/laurence-blondeau-essence-et-conscience/30min" target="_blank" class="btn cta-btn"
			>Réserver un rendez-vous gratuit</a
		>
	</nav>
</header>

<script>
	const mobileMenuToggle = document.querySelector(".mobile-menu-toggle");
	const nav = document.querySelector("#main-nav");
	const header = document.querySelector(".header-alt");

	// Toggle mobile menu
	mobileMenuToggle?.addEventListener("click", () => {
		const isExpanded = mobileMenuToggle.getAttribute("aria-expanded") === "true";
		mobileMenuToggle.setAttribute(
			"aria-expanded",
			!isExpanded ? "true" : "false"
		);
		nav?.classList.toggle("active");
		header?.classList.toggle("nav-open");
	});

	// Close menu when clicking outside
	document.addEventListener("click", (e) => {
		const target = e.target as HTMLElement;
		if (!target.closest("header") && nav?.classList.contains("active")) {
			nav.classList.remove("active");
			mobileMenuToggle?.setAttribute("aria-expanded", "false");
			header?.classList.remove("nav-open");
		}
	});

	// Close menu when clicking on a link
	nav?.addEventListener("click", (e) => {
		const target = e.target as HTMLElement;
		if (target.tagName === "A") {
			nav.classList.remove("active");
			mobileMenuToggle?.setAttribute("aria-expanded", "false");
			header?.classList.remove("nav-open");
		}
	});
</script>

<style lang="scss">
	.header-alt {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: clamp(10px, 2vw, 15px) clamp(15px, 3vw, 30px);
		background-color: $bg-color;
		height: clamp(60px, 10vh, 80px);
		position: relative;
		z-index: 1000;
		box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

		&.nav-open {
			background-color: $bg-color;
		}
	}

	.left-group {
		display: flex;
		align-items: center;
		height: 100%;
		transition: all 0.3s ease;
	}

	.logo {
		
		height:	100%;
		width: 150px;
		z-index: 1001;
		transition: all 0.3s ease;
		position: relative;
		

		&-link {
			display: block;
			height: 100%;
			transition: transform 0.3s ease;

			&:hover {
				transform: scale(1.05);
			}
		}

		&-img {
			object-fit: contain;
			left: -10px;
			top: -10px;
			transition: transform 0.4s ease;
			display: block;
			position: absolute;
			overflow: hidden;

			@media (max-width: 720px) {
				display: none;
			}
		}

		&-img-mobile {
			height: 150%;
			width: auto;
			object-fit: contain;
			position: absolute;
			left: -10px;
			top: -10px;
			transition: transform 0.4s ease;
			display: none;

			@media (max-width: 720px) {
				display: block;
			}
		}
	}

	.back-button {
		display: flex;
		align-items: center;
		gap: 5px;
		background: none;
		border: none;
		color: $text-color;
		font-size: clamp(0.9rem, 2vw, 1rem);
		cursor: pointer;
		padding: 8px 12px;
		border-radius: 8px;
		transition: all 0.3s ease;
		margin-right: 15px;
		z-index: 1001;
		position: relative;
		overflow: hidden;

		&::before {
			content: "";
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background-color: rgba(255, 255, 255, 0.1);
			transform: translateY(100%);
			transition: transform 0.3s ease;
			border-radius: 8px;
			z-index: -1;
		}

		svg {
			width: clamp(16px, 1.5vw, 20px);
			height: auto;
			transition: transform 0.3s ease;
		}

		&:hover {
			color: $text-color;

			&::before {
				transform: translateY(0);
			}

			svg {
				transform: translateX(-3px);
			}
		}

		@media (max-width: 768px) {
			padding: 8px;

			span {
				display: none;
			}
		}
	}

	.mobile-menu-toggle {
		display: none;
		background: none;
		border: none;
		padding: 10px;
		cursor: pointer;
		z-index: 1001;
		transition: transform 0.3s ease;

		&:hover {
			transform: scale(1.1);
		}

		.hamburger {
			display: block;
			width: 24px;
			height: 2px;
			background-color: $text-color;
			position: relative;
			transition: all 0.3s ease;
			left: 0;
			transform-origin: center;

			&::before,
			&::after {
				content: "";
				position: absolute;
				width: 24px;
				height: 2px;
				background-color: $text-color;
				transition: all 0.3s ease;
				left: 0;
				transform-origin: center;
			}

			&::before {
				top: -8px;
			}

			&::after {
				bottom: -8px;
			}
		}

		&[aria-expanded="true"] {
			.hamburger {
				background-color: transparent;

				&::before {
					transform: rotate(45deg) translate(5.5px, 5.5px);
				}

				&::after {
					transform: rotate(-45deg) translate(5.5px, -5.5px);
				}
			}
		}
	}

	nav {
		display: flex;
		align-items: center;
		gap: clamp(15px, 2vw, 30px);

		.nav-link {
			color: $text-color;
			text-decoration: none;
			font-size: clamp(0.85rem, 1.5vw, 1.1rem);
			transition: all 0.3s ease;
			position: relative;
			padding: 5px 0;

			span {
				position: relative;
				z-index: 1;
			}

			&::after {
				content: "";
				position: absolute;
				bottom: 0;
				left: 0;
				width: 0;
				height: 2px;
				background-color: $secondary-color;
				transition: width 0.3s ease;
			}

			&:hover {
				color: $text-white;

				&::after {
					width: 100%;
				}
			}
		}

		.cta-btn {
			display: inline-block;
			background-color: $primary-color;
			color: $text-white;
			padding: clamp(8px, 1.5vw, 12px) clamp(15px, 2vw, 25px);
			border-radius: 30px;
			font-weight: 600;
			font-size: clamp(0.85rem, 1.5vw, 1rem);
			transition: all 0.3s ease;
			white-space: nowrap;
			border: 2px solid transparent;

			&:hover {
				transform: translateY(-3px);
				box-shadow: 0 7px 14px rgba(0, 0, 0, 0.2);
				background-color: darken($primary-color, 5%);
			}

			&:active {
				transform: translateY(-1px);
				box-shadow: 0 3px 8px rgba(0, 0, 0, 0.2);
			}
		}
	}

	@media (max-width: 768px) {
		.mobile-menu-toggle {
			display: block;
		}

		nav {
			position: fixed;
			top: 0;
			right: -100%;
			width: 100%;
			height: 100vh;
			background-color: $bg-color;
			flex-direction: column;
			justify-content: center;
			padding: 80px 20px 20px;
			transition: all 0.4s cubic-bezier(0.77, 0, 0.175, 1);
			opacity: 0;
			visibility: hidden;

			&.active {
				right: 0;
				opacity: 1;
				visibility: visible;
			}

			.nav-link {
				font-size: clamp(1.1rem, 4vw, 1.3rem);
				padding: 15px;
				width: 100%;
				text-align: center;
				margin: 5px 0;

				&::after {
					display: none;
				}

				&:hover {
					background-color: rgba(255, 255, 255, 0.1);
					border-radius: 8px;
				}
			}

			.cta-btn {
				margin-top: 20px;
				width: 100%;
				max-width: 300px;
				font-size: clamp(0.9rem, 3vw, 1rem);
				text-align: center;
			}
		}
	}
</style>
