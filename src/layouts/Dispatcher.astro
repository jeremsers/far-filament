---
import { Image } from "astro:assets";
import burnoutImg from "../images/burnout-dispatch.avif";
import ruptureImg from "../images/rupture-dispatch.avif";


---

<section class="dispatcher-section" id="dispatcher">
	<div class="dispatcher-header">
		<h2>Quel accompagnement vous appelle ?</h2>
		<p>
			Choisissez le parcours qui correspond à votre situation et qui deviendra
			votre point de départ.
		</p>
	</div>

	<div class="dispatcher-grid">
		<!-- Carte BURNOUT (Pro) -->
		<a href="/burnout" class="dispatch-card burnout">
			<div class="card-image">
				<Image
					src={burnoutImg}
					alt="Bureau Zen et Nature"
				/>
				<div class="overlay"></div>
			</div>
			<div class="card-content">
				<span class="tag">Professionnel</span>
				<h3>Burnout & Carrière</h3>
				<p>
					Retrouvez du sens, de l'énergie et un équilibre durable dans votre vie
					professionnelle.
				</p>
				<div class="fake-button">Découvrir le programme</div>
			</div>
		</a>

		<!-- Carte RUPTURE (Perso) -->
		<a href="/rupture" class="dispatch-card rupture">
			<div class="card-image">
				<Image
					src={ruptureImg}
					alt="Ambiance Cosy et Cocon"
				/>
				<div class="overlay"></div>
			</div>
			<div class="card-content">
				<span class="tag">Personnel</span>
				<h3>Rupture & Deuil</h3>
				<p>
					Traversez cette épreuve avec douceur pour vous reconstruire et avancer
					sereinement.
				</p>
				<div class="fake-button">Découvrir l'accompagnement</div>
			</div>
		</a>
	</div>
</section>

<style lang="scss">
	.dispatcher-section {
		background: linear-gradient(to bottom, $bg-color 80%, $bg-light);
		padding: 80px 20px;
		width: 100%;
		box-sizing: border-box;

		.dispatcher-header {
			text-align: center;
			margin-bottom: 60px;
			max-width: 800px;
			margin-left: auto;
			margin-right: auto;

			h2 {
				font-family: "Montserrat", serif;
				color: $text-color;
				font-size: clamp(1.5rem, 5vw, 3rem);
				margin-bottom: 15px;
				line-height: 1.2;

				
			}

			p {
				font-family: "Poppins", sans-serif;
				color: $text-light;
				font-weight: 300;
				font-size: clamp(0.8rem, 1vw + 0.5rem, 1.3rem);
				max-width: 600px;
				margin: 0 auto;
			}
		}

		.dispatcher-grid {
			display: grid;
			grid-template-columns: 1fr;
			gap: 40px;
			max-width: 1100px;
			margin: 0 auto;
			padding: 0 20px;

			@media (min-width: $mobile) {
				grid-template-columns: 1fr 1fr;
				padding: 0;
			}
		}

		.dispatch-card {
			display: block;
			background-color: $bg-light;
			border-radius: 20px;
			overflow: hidden;
			text-decoration: none;
			border: 1px solid rgba($text-color, 0.05);
			box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
			transition:
				transform 0.3s ease,
				box-shadow 0.3s ease;
			position: relative;
			height: 100%;
			display: flex;
			flex-direction: column;

			&:hover {
				transform: translateY(-8px);
				box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);

				.card-image {
					img {
						transform: scale(1.05);
					}
				}
			}

			.card-image {
				height: 250px;
				position: relative;
				overflow: hidden;
				flex-shrink: 0;

				img {
					width: 100%;
					height: 100%;
					object-fit: cover;
					transition: transform 0.5s ease;
				}

				.overlay {
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					height: 100%;
					opacity: 0.1;
					pointer-events: none;
					z-index: 1;
				}
			}

			.card-content {
				padding: 35px;
				text-align: center;
				flex-grow: 1;
				display: flex;
				flex-direction: column;
				align-items: center;

				.tag {
					display: block;
					text-transform: uppercase;
					font-weight: 700;
					letter-spacing: 2px;
					margin-bottom: 15px;
					font-size: 0.85rem;
				}

				h3 {
					font-family: "Poppins", serif;
					color: $text-color;
					font-size: 1.8rem;
					margin: 0 0 15px 0;
				}

				p {
					color: $text-light;
					line-height: 1.6;
					margin: 0 0 25px 0;
					display: -webkit-box;
					-webkit-line-clamp: 3;
					-webkit-box-orient: vertical;
					overflow: hidden;
					font-size: 1rem;
				}

				.fake-button {
					margin-top: auto;
					display: inline-block;
					padding: 12px 25px;
					border-radius: 50px;
					border: 1px solid;
					background: transparent;
					font-weight: 500;
					transition: all 0.3s ease;
					text-transform: uppercase;
					font-size: 0.9rem;
					letter-spacing: 1px;
				}
			}

			// Styles spécifiques Burnout
			&.burnout {
				.tag {
					color: $primary-color;
				}

				.card-image .overlay {
					background-color: $primary-color;
				}

				.fake-button {
					color: $primary-color;
					border-color: $primary-color;
				}

				&:hover {
					.fake-button {
						background-color: $primary-color;
						color: $text-white;
					}
				}
			}

			// Styles spécifiques Rupture
			&.rupture {
				.tag {
					color: $secondary-color;
				}

				.card-image .overlay {
					background-color: $secondary-color;
				}

				.fake-button {
					color: $secondary-color;
					border-color: $secondary-color;
				}

				&:hover {
					.fake-button {
						background-color: $secondary-color;
						color: $text-white;
					}
				}
			}
		}
	}
</style>
